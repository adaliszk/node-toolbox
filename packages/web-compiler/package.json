{
  "version": "0.4.1",
  "name": "@adaliszk/web-compiler",
  "description": "Web configuration for Vite using Typescript",
  "repository": "github:adaliszk/node-toolbox",
  "homepage": "https://github.com/adaliszk/node-toolbox/tree/release/packages/web-compiler",
  "bugs": "https://github.com/adaliszk/node-toolbox/labels/web-compiler",
  "license": "BSD-3-Clause",
  "types": "dist/compiler.d.ts",
  "module": "dist/compiler.mjs",
  "main": "dist/compiler.js",
  "bin": {
    "web-compiler": "dist/cli.js"
  },
  "files": [
    "dist",
    "*.md"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsup source/compiler.ts source/cli.ts --format cjs,esm --minify --sourcemap --dts",
    "lint": "eslint source/**",
    "prepublish": "yarn build"
  },
  "dependencies": {
    "@originjs/vite-plugin-federation": "^1.1",
    "postcss": "^8.4",
    "postcss-calc": "^8.2",
    "postcss-import": "^15.1",
    "postcss-nested": "^6.0",
    "vite": "^4.1",
    "vite-plugin-checker": "^0.5",
    "vite-plugin-compression2": "^0.5",
    "vite-plugin-dts": "^1.7",
    "vite-plugin-mkcert": "^1.11",
    "vite-tsconfig-paths": "^4.0"
  },
  "devDependencies": {
    "@adaliszk/typescript": "^4.9.5",
    "@swc/core": "latest",
    "eslint": "latest",
    "tsup": "latest",
    "typescript": "latest"
  },
  "keywords": [
    "typescript",
    "vite",
    "compiler"
  ]
}
