{
  "private": true,
  "version": "0.1.3",
  "name": "@adaliszk/nestjs-microservice-example",
  "author": "Ádám Liszkai <adam@liszkai.dev>",
  "main": "dist/main.js",
  "bin": "dist/main.js",
  "scripts": {
