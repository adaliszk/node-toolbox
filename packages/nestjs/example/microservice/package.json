    "@adaliszk/typescript-testing": "workspace:^",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/cli": "^10.2.1",
    "@swc/core": "^1.3.101",
    "esbuild": "^0.19",
    "eslint": "^8.56",
    "pino-pretty": "^10.3",
    "pkg": "^5.8",
    "typescript": "^5.3"
  },
  "pkg": {
    "assets": "public/**/*",
    "scripts": "dist/**/*.js",
    "targets": [
      "node18-alpine-x64"
