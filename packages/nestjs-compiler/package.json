{
  "version": "9.3.4",
  "name": "@adaliszk/nestjs-compiler",
  "description": "Nest.js ESBuild and SWC compiler",
  "repository": "github:adaliszk/node-toolbox",
  "homepage": "https://github.com/adaliszk/node-toolbox/tree/release/packages/react",
  "bugs": "https://github.com/adaliszk/node-toolbox/labels/react",
  "license": "BSD-3-Clause",
  "main": "dist/compiler.js",
  "bin": "dist/compiler.js",
  "files": [
    "dist",
    "*.cjs",
    "*.md"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build:compiler": "esbuild source/compiler.ts --platform=node --format=cjs --minify --outdir=dist",
    "build": "pnpm clean && pnpm build:compiler && chmod +x dist/compiler.js",
    "lint": "eslint source/**",
    "prepublish": "pnpm build"
  },
  "dependencies": {
    "@swc/core": "^1.3",
    "chalk": "^5.2",
    "chokidar": "^3.5",
    "commander": "^10.0",
    "esbuild": "^0.17",
    "esbuild-decorators": "^1.0",
    "pretty-bytes": "^6.1",
    "rimraf": "^4.4"
  },
  "devDependencies": {
    "@adaliszk/typescript": "workspace:~",
    "eslint": "^8.39",
    "esbuild": "^0.17",
    "typescript": "^5.0"
  },
  "keywords": [
    "typescript",
    "nest.js",
    "compiler"
  ]
}
