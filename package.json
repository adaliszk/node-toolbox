{
  "private": true,
  "name": "@adaliszk/node-toolbox",
  "description": "AdaLiszk's frequently used NPM packages wrapped up into easy-to-use packs",
  "repository": "github:adaliszk/node-toolbox",
  "homepage": "https://github.com/adaliszk/node-toolbox",
  "bugs": "https://github.com/adaliszk/node-toolbox/issues",
  "license": "BSD-3-Clause",
  "author": "Ádám Liszkai <node-toolbox@adaliszk.dev>",
  "contributors": [],
  "scripts": {
    "build": "turbo run build --output-logs=new-only",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "propose": "turbo run build lint test && changeset version",
    "release": "changeset publish",
    "changeset": "changeset",
    "turbo": "turbo",
    "workspace": "yarn workspace"
  },
  "packageManager": "yarn@3.5.0",
  "workspaces": [
    "configs/*",
    "helpers/*",
    "packages/*",
    "packages/*/example/*",
    "packs/*"
  ],
  "devDependencies": {
    "@adaliszk/typescript": "workspace:*",
    "@changesets/changelog-git": "^0.1",
    "@changesets/cli": "^2.26",
    "@swc/core": "^1.3",
    "turbo": "^1.8",
    "typescript": "^4.9"
  },
  "keywords": [
    "node",
    "npm",
    "toolbox",
    "packages",
    "configs",
    "plugins",
    "packs"
  ]
}
