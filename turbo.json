{
  "$schema" : "https://turborepo.org/schema.json",
  "globalDependencies": [
    "@swc/core",
    "dprint",
    "typescript",
    "esbuild",
    "eslint",
    "tsup"
  ],
  "pipeline" : {
    "build" : {
      "dependsOn" : [
        "^build",
        "fmt"
      ],
      "outputs" : [
        "dist/**",
        "server/**"
      ]
    },
    "test": {
      "dependsOn" : ["build"]
    },
    "lint": {
      "dependsOn" : ["fmt"]
    }
  }
}
